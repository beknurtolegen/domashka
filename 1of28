package eleven;
import java.util.Arrays;
import java.util.Collections;

public class WordUtils {
    public static String reverseWords(String inputText) {
        if (inputText == null || inputText.isEmpty()) {
            return inputText;
        }

        String[] words = inputText.split(" ");
        Collections.reverse(Arrays.asList(words));
        return String.join(" ", words);
    }

    private WordUtils() {
        // Предотвращение создания экземпляров
    }

    public static void main(String[] args) {
        System.out.println("Ввод пустой строки - " + WordUtils.reverseWords(""));
        System.out.println("Ввод одного слова - " + WordUtils.reverseWords("слово"));
        System.out.println("Ввод двух слов - " + WordUtils.reverseWords("два слова"));
        System.out.println("Ввод нескольких слов - " + WordUtils.reverseWords("это два слова"));
    }
}
